{
    "general": {
        "debug_mode": true,
        "theme": "dark",
        "task_workers": 8
    },
    "ai": {
        "provider_id": "clip_local",
        "device": "cpu",
        "result_limit": 50
    },
    "mongo": {
        "host": "localhost",
        "port": 27017,
        "database_name": "foundation_app"
    },
    "ui": {
        "window_state": null,
        "window_width": 1400,
        "window_height": 900,
        "recent_directories": []
    },
    "library_path": "./data",
    "processing": {
        "process_workers": 4,
        "ai_workers": 4,
        "batch_chunk_size": 5,
        "detection": {
            "enabled": true,
            "backend": "yolo",
            "yolo": {
                "enabled": true,
                "model": "yolov8n.pt",
                "confidence": 0.25,
                "classes": null,
                "use_gpu": true
            },
            "mtcnn": {
                "enabled": false,
                "min_face_size": 20,
                "thresholds": [
                    0.6,
                    0.7,
                    0.7
                ],
                "use_gpu": true
            },
            "grounding_dino": {
                "enabled": true,
                "box_threshold": 0.35,
                "text_threshold": 0.25,
                "class_mapping": {
                    "person": "person",
                    "face": "face",
                    "cat": "cat",
                    "dog": "dog",
                    "car": "vehicle",
                    "truck": "vehicle",
                    "motorcycle": "vehicle",
                    "building": "architecture",
                    "text": "text",
                    "logo": "logo"
                }
            }
        },
        "wd_tagger": {
            "enabled": true,
            "model_repo": "SmilingWolf/wd-vit-tagger-v3",
            "general_threshold": 0.35,
            "character_threshold": 0.6
        },
        "embeddings": {
            "clip": {
                "enabled": true,
                "model": null
            },
            "dino": {
                "enabled": true,
                "model": "vit_small_patch16_224.dino"
            },
            "blip": {
                "enabled": true,
                "model": null
            }
        }
    },
    "metadata": {
        "auto_fill_description_from_blip": true,
        "prefer_xmp_over_existing": false
    },
    "thumbnail": {
        "default_size": 128,
        "sizes": [
            128,
            256,
            512
        ],
        "cache_path": null,
        "max_cache_mb": 1000,
        "jpeg_quality": 85
    },
    "search": {
        "default_limit": 100,
        "min_similarity": 0.7,
        "faiss_index_type": "Flat"
    },
    "similarity": {
        "threshold": 0.7
    },
    "llm": {
        "enabled": false,
        "provider": "openai",
        "model": null
    },
    "llm_workers": {
        "enabled": true,
        "num_workers": 2,
        "queue_max_size": 100,
        "idle_unload_seconds": 300,
        "models": {
            "clip": {
                "enabled": true
            },
            "blip": {
                "enabled": true
            },
            "wdtagger": {
                "enabled": true
            },
            "yolo": {
                "enabled": true
            },
            "grounding_dino": {
                "enabled": true
            }
        }
    }
}