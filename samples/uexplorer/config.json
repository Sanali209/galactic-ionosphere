{
    "general": {
        "debug_mode": true,
        "theme": "dark",
        "task_workers": 3
    },
    "ai": {
        "provider_id": "clip_local",
        "device": "cuda",
        "result_limit": 50
    },
    "mongo": {
        "host": "localhost",
        "port": 27017,
        "database_name": "foundation_app"
    },
    "library_path": "./data",
    "processing": {
        "ai_workers": 2,
        "detection": {
            "enabled": true,
            "backend": "yolo",
            "yolo": {
                "enabled": true,
                "model": "yolov8n.pt",
                "confidence": 0.25,
                "classes": [
                    "person",
                    "car"
                ],
                "use_gpu": true
            },
            "mtcnn": {
                "enabled": true,
                "min_face_size": 20,
                "thresholds": [
                    0.6,
                    0.7,
                    0.7
                ],
                "use_gpu": true
            },
            "grounding_dino": {
                "enabled": true,
                "box_threshold": 0.35,
                "text_threshold": 0.25,
                "class_mapping": {
                    "person": "person",
                    "face": "face",
                    "human face": "face",
                    "cat": "cat",
                    "dog": "dog",
                    "bird": "bird",
                    "car": "vehicle",
                    "truck": "vehicle",
                    "motorcycle": "vehicle",
                    "building": "architecture",
                    "text": "text",
                    "logo": "logo"
                }
            }
        },
        "wd_tagger": {
            "enabled": true,
            "model_repo": "SmilingWolf/wd-vit-tagger-v3",
            "general_threshold": 0.35,
            "character_threshold": 0.35
        },
        "embeddings": {
            "clip": {
                "enabled": true
            },
            "dino": {
                "enabled": true,
                "model": "vit_small_patch16_224.dino"
            },
            "blip": {
                "enabled": true
            }
        }
    }
}