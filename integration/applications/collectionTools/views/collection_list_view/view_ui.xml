<root>
    <Row id="toolbar_row" >
        <MenuBar>
            <SubmenuButton text="File">
                <MenuItemButton text="Edit file"  on_click="edit_db_file"/>
                <MenuItemButton text="Settings"  />
            </SubmenuButton>
            <SubmenuButton text="Database">
                <MenuItemButton text="Add folder to db" id="add_folder_to_db_button" on_click="add_folder_to_db"/>
                <MenuItemButton text="Index db"  on_click="index_db"/>
                <MenuItemButton text="Optimize"  />
            </SubmenuButton>
                    <SubmenuButton text="Tools">
                        <SubmenuButton text="Image Search">
                            <MenuItemButton text="Refresh" on_click="refresh_image_search"/>
                        </SubmenuButton>
                        <SubmenuButton text="Batch ops"/>
                        <SubmenuButton text="Annotation">
                            <SubmenuButton text="Selection">
                                <MenuItemButton text="mark for annotation"/>
                            </SubmenuButton>
                            <MenuItemButton text="single annotation tool" on_click="open_single_annotation_tool"/>
                            <MenuItemButton text="single half auto annotation tool" on_click="open_half_auto_annotation_tool"/>
                        </SubmenuButton>
                    </SubmenuButton>
                    <SubmenuButton text="View">
                        <SubmenuButton text="Sort"/>
                        <SubmenuButton text="Group"/>
                        <SubmenuButton text="Selection">
                            <MenuItemButton text="Select all" on_click="on_list_view_select_all"/>
                            <MenuItemButton text="Select all in view" on_click="on_list_view_select_view"/>
                            <MenuItemButton text="Move to folder" on_click="move_selected_to_folder"/>
                        </SubmenuButton>
                    </SubmenuButton>

        </MenuBar>
    </Row>

            <Row expand="1">
                <ColPanelVert  expand="1">
                <Column id="left_column" expand="1">
                    <Text value = "Navigation"/>
                </Column>
                </ColPanelVert>

                <Column id="center_column" expand="3">
                    <Row>
                        <Button id="page_next_button" text="n" on_click="on_page_next_button_click"/>
                        <Button id="page_prev_button" text="p" on_click="on_page_prev_button_click"/>
                        <TextField id="query_input_text_field" value = "Files list"/>

                        <Switch id="lv_sel_mode" label="multi select" on_change="list_mode_select"/>
                    </Row>
                    <Row>
                            <Text value="Pages:"/>
                            <Text id="all_pages_count_text" value="0"/>
                            <Text value="Current:"/>
                            <Text id="current_page_text" value="0"/>
                            <Text value="Items:"/>
                            <Text id="all_items_count_text" value="0"/>
                            <Text value="q:"/>
                            <Text id="query_input_text" value=""/>
                        </Row>
                </Column>
                <ColPanelVert  expand="1">
                <Column id="right_column" expand="1">

                </Column>
                </ColPanelVert>
            </Row>
            <Row id="footer_row" wrap="True">
                <ProgressBar id="gen_view_progress_bar" value="0.0" width="300"/>
                <Text id="gen_progress_message" value="message"/>
            </Row>
</root>