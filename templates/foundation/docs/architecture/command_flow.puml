@startuml
participant "User Interface" as UI
participant "CommandBus" as Bus
participant "CreateUserHandler" as Handler
participant "Database" as DB

UI -> Bus: dispatch(CreateUserCommand)
Bus -> Bus: Lookup Handler
Bus -> Handler: handle(command)
Handler -> DB: save(user)
DB -->> Handler: success
Handler -->> Bus: result
Bus -->> UI: result
@enduml
