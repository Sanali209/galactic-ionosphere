@startuml
class ServiceLocator {
    +init()
    +register_system(cls)
    +get_system(cls)
    +start_all()
    +stop_all()
}

abstract class BaseSystem {
    +locator: ServiceLocator
    +config: ConfigManager
    +initialize()
    +shutdown()
}

class AssetManager
class JournalService
class TaskSystem
class CommandBus

ServiceLocator "1" *-- "*" BaseSystem : manages
BaseSystem <|-- AssetManager
BaseSystem <|-- JournalService
BaseSystem <|-- TaskSystem
BaseSystem <|-- CommandBus
@enduml
