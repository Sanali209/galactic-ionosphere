{
    "general": {
        "debug_mode": true,
        "theme": "dark"
    },
    "ai": {
        "provider_id": "clip_local",
        "device": "cpu",
        "result_limit": 50
    },
    "mongo": {
        "host": "localhost",
        "port": 27017,
        "database_name": "foundation_app"
    },
    "library_path": "./data",
    "processing": {
        "ai_workers": 4,
        "batch_chunk_size": 5,
        "detection": {
            "enabled": true,
            "backend": "yolo",
            "yolo": {
                "enabled": true,
                "model": "yolov8n.pt",
                "confidence": 0.25,
                "classes": null,
                "use_gpu": true
            },
            "grounding_dino": {
                "enabled": true,
                "box_threshold": 0.35,
                "text_threshold": 0.25,
                "class_mapping": {
                    "person": "person",
                    "face": "face",
                    "cat": "cat",
                    "dog": "dog",
                    "car": "vehicle",
                    "truck": "vehicle",
                    "motorcycle": "vehicle",
                    "building": "architecture",
                    "text": "text",
                    "logo": "logo"
                }
            }
        },
        "wd_tagger": {
            "enabled": true,
            "model_repo": "SmilingWolf/wd-vit-tagger-v3",
            "general_threshold": 0.35,
            "character_threshold": 0.6
        },
        "embeddings": {
            "clip": {
                "enabled": true,
                "model": null
            },
            "blip": {
                "enabled": true,
                "model": null
            }
        }
    },
    "metadata": {
        "auto_fill_description_from_blip": true,
        "prefer_xmp_over_existing": false
    },
    "maintenance": {
        "enabled": true,
        "schedule": {
            "background_verification": {
                "enabled": true,
                "interval_minutes": 5
            },
            "database_optimization": {
                "enabled": true,
                "interval_hours": 24,
                "initial_delay_seconds": 300
            },
            "cache_cleanup": {
                "enabled": true,
                "interval_hours": 6,
                "max_cache_size_gb": 10,
                "max_age_days": 30
            },
            "orphaned_cleanup": {
                "enabled": true,
                "interval_hours": 12
            },
            "log_rotation": {
                "enabled": true,
                "interval_hours": 24,
                "max_log_files": 10,
                "max_log_size_mb": 100
            },
            "database_cleanup": {
                "enabled": true,
                "interval_days": 7,
                "task_retention_days": 30,
                "journal_retention_days": 90
            }
        }
    }
}